<?xml version="1.0" encoding="utf-8"?>
<project basedir="." default="create-db" name="PersonalManagementSystem">
    <property name="my-driver"      value="org.postgresql.Driver" />
    <property name="my-classpath"   value="lib/postgresql-42.2.10.jar" />
    <property name="my-url"         value="jdbc:postgresql://localhost:5432/template1" />
    <property name="my-userid"      value="postgres" />
    <property name="my-password"    value="Password" />


    <target name="create-db">
        <sql driver="${my-driver}"
            classpath="${my-classpath}"
            url="${my-url}"
            userid="${my-userid}"
            password="${my-password}"
            autocommit="true">

            CREATE DATABASE LebedevNikitaDB;
        </sql>
    </target>

    <target name="drop-db">
        <sql driver="${my-driver}"
            classpath="${my-classpath}"
            url="${my-url}"
            userid="${my-userid}"
            password="${my-password}"
            autocommit="true">

            DROP DATABASE LebedevNikitaDB;
        </sql>
    </target>

    <target name="fill-db">
        <sql driver="${my-driver}"
            classpath="${my-classpath}"
            url="${my-url}"
            userid="${my-userid}"
            password="${my-password}"
            src="db/drop_tables.sql" />
        <sql driver="${my-driver}"
            classpath="${my-classpath}"
            url="${my-url}"
            userid="${my-userid}"
            password="${my-password}"
            src="db/create_tables.sql" />
        <sql driver="${my-driver}"
            classpath="${my-classpath}"
            url="${my-url}"
            userid="${my-userid}"
            password="${my-password}"
            src="db/fill_emp.sql" />
        <sql driver="${my-driver}"
            classpath="${my-classpath}"
            url="${my-url}"
            userid="${my-userid}"
            password="${my-password}"
            src="db/fill_div.sql" />
        <sql driver="${my-driver}"
            classpath="${my-classpath}"
            url="${my-url}"
            userid="${my-userid}"
            password="${my-password}"
            src="db/fill_pos.sql" />
        <sql driver="${my-driver}"
            classpath="${my-classpath}"
            url="${my-url}"
            userid="${my-userid}"
            password="${my-password}"
            src="db/fill_emp_pos.sql" />
    </target>

</project>
